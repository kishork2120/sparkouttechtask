{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "new-cap": ["error", { "capIsNewExceptions": ["Router","ObjectId"] }],
        "max-len": ["error", { "code": 150 }],
        "space-before-function-paren": ["error", "always"]
    }
}
